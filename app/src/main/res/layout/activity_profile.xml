<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="40px"
            android:tag="B"
            android:text="프로필"
            android:textColor="#4a4a4a"
            android:textSize="70px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:background="@drawable/back_btn_dark_gray" />

        <ImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/ic_more_vert_black_48dp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/profile_mypic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="50px"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:paddingBottom="10px">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="프로필 사진"
            android:textColor="#4a4a4a"
            android:textSize="40px" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="50px"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:paddingBottom="10px">

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:padding="10px"
            android:src="@drawable/email_selector" />
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:text="닉네임"
                android:textColor="#4a4a4a"
                android:textSize="40px" />
            <TextView
                android:id="@+id/my_nick"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="30px"
                android:paddingLeft="24px"
                android:textColor="#aaaaaa"/>
        </LinearLayout>


        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="50px"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:paddingBottom="10px">

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:padding="10px"
            android:src="@drawable/email_selector" />
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:text="사용자 이름"
                android:textColor="#4a4a4a"
                android:textSize="40px" />
            <TextView
                android:id="@+id/my_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="차윤제"
                android:textSize="30px"
                android:paddingLeft="24px"
                android:textColor="#aaaaaa"/>
        </LinearLayout>


        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="50px"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:paddingBottom="10px">

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:padding="10px"
            android:src="@drawable/email_selector" />

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="계정"
            android:textColor="#4a4a4a"
            android:textSize="40px" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow_grey"/>
    </LinearLayout>

</LinearLayout>